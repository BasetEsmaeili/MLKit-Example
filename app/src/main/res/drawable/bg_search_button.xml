<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:width="@dimen/size_search_button"
        android:height="@dimen/size_search_button">
        <shape android:shape="oval">
            <solid android:color="@color/search_button_background" />
            <stroke
                android:width="1dp"
                android:color="@color/white" />
        </shape>
    </item>
    <item
        android:bottom="@dimen/margin_6"
        android:end="@dimen/margin_6"
        android:gravity="center"
        android:start="@dimen/margin_6"
        android:top="@dimen/margin_6">
        <shape android:shape="oval">
            <solid android:color="@color/white" />
        </shape>
    </item>

    <item
        android:width="24dp"
        android:height="24dp"
        android:drawable="@drawable/baseline_search_24"
        android:gravity="center" />
</layer-list>